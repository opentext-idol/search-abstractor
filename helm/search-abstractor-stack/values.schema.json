{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$defs": {
        "base":{
            "type": "object",
            "properties": {
                "global": {
                    "$ref": "#/$defs/global"
                },
                "aes": {
                    "$ref": "#/$defs/aes"
                },
                "content":{
                    "$ref": "#/$defs/content"
                },
                "community":{
                    "$ref": "#/$defs/community"
                },
                "ogs":{
                    "$ref": "#/$defs/ogs"
                },
                "answerserver":{
                    "$ref": "#/$defs/optional_object"
                },
                "view":{
                    "$ref": "#/$defs/optional_object"
                },
                "nifi":{
                    "$ref": "#/$defs/optional_object"
                },
                "qms":{
                    "$ref": "#/$defs/optional_object"
                },
                "auth":{
                    "$ref": "#/$defs/auth"
                },
                "saapiPostgresql":{
                    "$ref": "#/$defs/saapiPostgresql"
                },
                "sessionapi":{
                    "$ref": "#/$defs/sessionapi"
                },
                "saapi":{
                    "$ref": "#/$defs/saapi"
                }
            },
            "required": [
                "aes",
                "answerserver",
                "auth",
                "community",
                "content",
                "global",
                "nifi",
                "ogs",
                "qms",
                "saapi",
                "sessionapi",
                "saapiPostgresql",
                "view"
            ],
            "unevaluatedProperties": false
        },
        "global":{
            "type": "object",
            "properties":{
                "idolVersion": {
                    "type": "string"
                },
                "imagePullSecrets": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/$defs/required_string"
                    }
                }
            },
            "required":[
                "imagePullSecrets"
            ]
        },
        "optional_object":{
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            },
            "required":[
                "enabled"
            ]
        },
        "required_string":{
            "type": "string",
            "minLength": 1
        },
        "image":{
            "type": "object",
            "properties":{
                "registry": { "type": "string" },
                "repo": { "type": "string"},
                "version": { "type": "string"},
                "pullPolicy": { "type": "string"}
            },
            "required":[
                "registry","repo","version","pullPolicy"
            ],
            "unevaluatedProperties": false
        },
        "aes":{
            "type": "object",
            "properties": {
                "key": {
                    "$ref": "#/$defs/required_string"
                }
            },
            "required":[
                "key"
            ]
        },
        "content":{
            "type": "object",
            "properties": {
                "cfg":{
                    "type": "object",
                    "properties":{
                        "fieldprocessing": {
                            "type": "string"
                        },
                        "security": {
                            "type": "string"
                        }
                    }
                }
            },
            "allOf":[
                { "$ref": "#/$defs/optional_object" }
            ]
        },
        "community":{
            "type": "object",
            "properties": {
                "cfg":{
                    "type": "object",
                    "properties":{
                        "security": {
                            "type": "string"
                        }
                    }
                }
            },
            "allOf":[
                { "$ref": "#/$defs/optional_object" }
            ]
        },
        "ogs":{
            "type": "object",
            "properties": {
                "cfg":{
                    "type": "object",
                    "properties":{
                        "repositories": {
                            "type": "string"
                        }
                    }
                }
            },
            "allOf":[
                { "$ref": "#/$defs/optional_object" }
            ]
        },
        "auth":{
            "type": "object",
            "properties": {
                "realm": { "type": "string" },
                "apiClient": { "type": "string" },
                "apiClientSecret": { "type": "string" },
                "uiClient": { "type": "string" },
                "uiUrls": { "type": "string" },
                "baseRealmRoles": { "type": "string" },
                "tokenExpiryTimeSeconds": { "type": "integer" }
            },
            "allOf":[
                { "$ref": "#/$defs/optional_object" }
            ],
            "required":[
                "apiClient",
                "apiClientSecret",
                "baseRealmRoles",
                "realm",
                "tokenExpiryTimeSeconds",
                "uiClient",
                "uiUrls"
            ]
        },
        "saapiPostgresql": {
            "$ref": "#/$defs/optional_object"
        },
        "sessionapi": {
            "type": "object",
            "properties": {
                "name": { "$ref": "#/$defs/required_string" },
                "replicas": { "type": "integer" },
                "config": { "$ref": "#/$defs/required_string" },
                "licensor": {
                    "type": "object",
                    "properties": {
                        "name": { "$ref": "#/$defs/required_string" },
                        "port": { "type": "integer" }
                    },
                    "required": [
                        "name","port"
                    ],
                    "unevaluatedProperties": false
                },
                "image": {"$ref": "#/$defs/image" },
                "ingress": {
                    "type": "object",
                    "properties": {
                        "enabled": { "type": "boolean" },
                        "path": { "type": "string" },
                        "host": { "type": "string" },
                        "className": { "type": "string"}
                    },
                    "required": [
                        "className","enabled","path","host"
                    ],
                    "unevaluatedProperties": false
                },
                "service": {
                    "type": "object",
                    "properties": {
                        "name": { "$ref": "#/$defs/required_string" },
                        "port": { "type": "integer" }
                    },
                    "required": [
                        "name","port"
                    ]
                }
            },
            "required": [
                "name",
                "replicas",
                "image",
                "service",
                "licensor",
                "config",
                "ingress"
            ]
        },
        "saapi":{
            "type": "object",
            "properties":{
                "name": { "$ref": "#/$defs/required_string" },
                "replicas": { "type": "integer" },
                "allowedOrigins": { "type": "string" },
                "backendIdolHost": { "$ref": "#/$defs/required_string" },
                "backendIdolPort": { "$ref": "#/$defs/required_string" },
                "backendIdolContentHost": { "$ref": "#/$defs/required_string" },
                "backendIdolContentPort": { "$ref": "#/$defs/required_string" },
                "config": { "$ref": "#/$defs/required_string" },
                "secret": { "$ref": "#/$defs/required_string" },
                "httpCacheMaxAge": { "type": "integer", "minimum": 1 },
                "backendApi":{
                    "type": "object",
                    "properties":{
                        "name": { "$ref": "#/$defs/required_string" },
                        "port": { "type": "integer"},
                        "ingress": {
                            "type": "object",
                            "properties":{
                                "enabled": { "type": "boolean" },
                                "host": { "type": "string"},
                                "className": { "type": "string"}
                            },
                            "required":[
                                "className", "enabled","host"
                            ],
                            "unevaluatedProperties": false
                        }
                    },
                    "required":[
                        "ingress",
                        "name",
                        "port"
                    ],
                    "unevaluatedProperties": false
                },
                "storage":{
                    "type": "object",
                    "properties":{
                        "dbName": { "$ref": "#/$defs/required_string" },
                        "maxFileSize":  { "$ref": "#/$defs/required_string" },
                        "maxRequestSize":  { "$ref": "#/$defs/required_string" }
                    },
                    "required":[
                        "dbName", "maxFileSize","maxRequestSize"
                    ],
                    "unevaluatedProperties": false
                },
                "image": {"$ref": "#/$defs/image" },
                "ingress":{
                    "type": "object",
                    "properties":{
                        "className": { "type": "string"},
                        "host": { "type": "string"},
                        "port": { "type": "integer" },
                        "path": { "$ref": "#/$defs/required_string"}
                    },
                    "required":[
                        "className","host","port","path"
                    ],
                    "unevaluatedProperties": false
                },
                "service":{
                    "type": "object",
                    "properties": {
                        "name": { "$ref": "#/$defs/required_string"},
                        "port": { "type": "integer" }
                    },
                    "required":[
                        "name","port"
                    ]
                },
                "vllm":{
                    "type": "object",
                    "properties":{
                        "endpoint": { "$ref": "#/$defs/required_string" },
                        "chatEndpoint": { "$ref": "#/$defs/required_string" },
                        "model": { "$ref": "#/$defs/required_string" },
                        "modelRevision": { "$ref": "#/$defs/required_string" },
                        "HFToken": { "type": "string" },
                        "llavaModel": { "type": "string" },
                        "llavaEndpointBase": { "$ref": "#/$defs/required_string" },
                        "openAiApiKey": { "type": "string" }
                    },
                    "required":[
                        "endpoint",
                        "chatEndpoint",
                        "model",
                        "modelRevision",
                        "llavaModel",
                        "llavaEndpointBase"
                    ],
                    "unevaluatedProperties": false
                }
            },
            "required":[
                "name",
                "replicas",
                "allowedOrigins",
                "backendIdolHost",
                "backendIdolPort",
                "backendIdolContentHost",
                "backendIdolContentPort",
                "config",
                "secret",
                "httpCacheMaxAge",
                "image",
                "backendApi",
                "storage",
                "ingress",
                "service",
                "vllm"
            ],
            "unevaluatedProperties": false
        }
    },
    "type": "object",
    "$ref": "#/$defs/base",
    "unevaluatedProperties": false
}